<UserControl
    x:Class="Phileas.Views.UserControls.MathModelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Phileas.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" DefaultLabelPosition="Right" OverflowButtonVisibility="Collapsed" IsDynamicOverflowEnabled="False" Margin="0,0,0,8">
            <CommandBar.Content>
                <TextBlock Text="Mathematisches Modell" FontSize="{StaticResource FontSize_Subtitle}" VerticalAlignment="Center" Margin="12,8,0,0" Height="40" Width="400"/>
            </CommandBar.Content>
        </CommandBar>


        <TextBox x:Name="TextBox_MathModelExpressions" Grid.Row="1" PlaceholderText="Formuliere Zuweisungen und Anfangswerte" Margin="8" MinHeight="200"
                 AcceptsReturn="True" LostFocus="TextBox_MathModelExpressions_LostFocus" TextChanged="TextBox_MathModelExpressions_TextChanged"/>

    </Grid>
</UserControl>
